    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--class="br.com.hisamoto.estudoandroid.fragment.HisamotoFragment" />-->

    <LinearLayout
            android:id="@+id/layout_direito"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    </LinearLayout>


</LinearLayout>